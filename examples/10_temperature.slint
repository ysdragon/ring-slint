global Theme {
    // Background layers
    out property <color> bg-base: #07070a;
    out property <color> bg-surface: #0f1014;
    out property <color> bg-elevated: #161820;
    out property <color> bg-hover: #1e2128;
    
    // Text hierarchy
    out property <color> text-primary: #f8fafc;
    out property <color> text-secondary: #94a3b8;
    out property <color> text-muted: #64748b;
    
    // Temperature colors
    out property <color> cold: #3b82f6;
    out property <color> cool: #06b6d4;
    out property <color> comfortable: #22c55e;
    out property <color> warm: #f59e0b;
    out property <color> hot: #ef4444;
    
    // Borders
    out property <color> border: #ffffff12;
    out property <color> border-hover: #ffffff20;
}

// ═══════════════════════════════════════════════════════════════════════════════
// TEMPERATURE SLIDER
// ═══════════════════════════════════════════════════════════════════════════════

component TempSlider inherits Rectangle {
    in property <string> label;
    in property <string> unit;
    in property <color> accent-color;
    in property <float> minimum;
    in property <float> maximum;
    in-out property <float> value;
    
    callback changed(float);
    
    property <float> normalized: (value - minimum) / (maximum - minimum);
    property <bool> hovered: track-touch.has-hover;
    property <bool> pressed: track-touch.pressed;
    
    height: 100px;
    background: Theme.bg-surface;
    border-radius: 16px;
    border-width: 1px;
    border-color: hovered ? accent-color.with-alpha(0.4) : Theme.border;
    
    animate border-color { duration: 200ms; easing: ease-out; }
    
    VerticalLayout {
        padding: 16px;
        spacing: 14px;
        
        // Header row
        HorizontalLayout {
            alignment: space-between;
            
            Text {
                text: label;
                font-size: 13px;
                font-weight: 600;
                color: Theme.text-secondary;
                vertical-alignment: center;
            }
            
            // Value badge
            Rectangle {
                width: 90px;
                height: 36px;
                border-radius: 10px;
                background: accent-color.with-alpha(0.15);
                border-width: 1px;
                border-color: accent-color.with-alpha(0.3);
                
                Text {
                    text: Math.round(value) + " " + unit;
                    font-size: 15px;
                    font-weight: 700;
                    color: accent-color;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }
        }
        
        // Slider track
        Rectangle {
            height: 32px;
            
            // Track background
            Rectangle {
                y: (parent.height - 6px) / 2;
                height: 6px;
                background: Theme.bg-elevated;
                border-radius: 3px;
                
                // Progress fill
                Rectangle {
                    width: max(6px, parent.width * normalized);
                    height: 100%;
                    background: @linear-gradient(90deg, accent-color.darker(15%), accent-color);
                    border-radius: 3px;
                    
                    animate width { duration: 50ms; easing: ease-out; }
                }
            }
            
            // Thumb
            Rectangle {
                x: max(0px, min(parent.width - self.width, (parent.width - self.width) * normalized));
                y: (parent.height - self.height) / 2;
                width: pressed ? 24px : 20px;
                height: pressed ? 24px : 20px;
                border-radius: self.width / 2;
                background: @radial-gradient(circle, #ffffff 0%, #f0f0f0 100%);
                border-width: 2px;
                border-color: accent-color;
                drop-shadow-blur: pressed ? 14px : 8px;
                drop-shadow-color: accent-color.with-alpha(0.5);
                
                animate x { duration: 50ms; easing: ease-out; }
                animate width { duration: 100ms; easing: ease-out; }
                animate height { duration: 100ms; easing: ease-out; }
                animate drop-shadow-blur { duration: 100ms; }
            }
            
            track-touch := TouchArea {
                moved => {
                    if self.pressed {
                        value = clamp(minimum + (self.mouse-x / parent.width) * (maximum - minimum), minimum, maximum);
                        changed(value);
                    }
                }
                clicked => {
                    value = clamp(minimum + (self.mouse-x / parent.width) * (maximum - minimum), minimum, maximum);
                    changed(value);
                }
            }
        }
    }
}

// ═══════════════════════════════════════════════════════════════════════════════
// TEMPERATURE GAUGE
// ═══════════════════════════════════════════════════════════════════════════════

component TempGauge inherits Rectangle {
    in property <float> percent;
    in property <string> label;
    
    height: 80px;
    background: Theme.bg-surface;
    border-radius: 16px;
    border-width: 1px;
    border-color: Theme.border;
    
    VerticalLayout {
        padding: 16px;
        spacing: 12px;
        
        HorizontalLayout {
            alignment: space-between;
            
            Text {
                text: "Temperature";
                font-size: 12px;
                font-weight: 500;
                color: Theme.text-muted;
            }
            
            Text {
                text: label;
                font-size: 13px;
                font-weight: 700;
                color: percent < 30 ? Theme.cold 
                     : percent < 50 ? Theme.comfortable 
                     : percent < 70 ? Theme.warm 
                     : Theme.hot;
                
                animate color { duration: 300ms; easing: ease-out; }
            }
        }
        
        // Gradient bar
        Rectangle {
            height: 14px;
            border-radius: 7px;
            background: Theme.bg-elevated;
            clip: true;
            
            // Gradient fill
            Rectangle {
                height: 100%;
                width: 100%;
                border-radius: 7px;
                background: @linear-gradient(90deg, 
                    Theme.cold 0%, 
                    Theme.cool 25%, 
                    Theme.comfortable 45%, 
                    Theme.warm 65%, 
                    Theme.hot 85%,
                    #dc2626 100%);
                opacity: 0.9;
            }
            
            // Indicator
            Rectangle {
                x: max(4px, min(parent.width - self.width - 4px, (parent.width - self.width) * percent / 100));
                y: (parent.height - self.height) / 2;
                width: 4px;
                height: 18px;
                border-radius: 2px;
                background: #ffffff;
                drop-shadow-blur: 10px;
                drop-shadow-color: #ffffff80;
                
                animate x { duration: 150ms; easing: ease-out; }
            }
        }
    }
}

// ═══════════════════════════════════════════════════════════════════════════════
// PRESET BUTTON
// ═══════════════════════════════════════════════════════════════════════════════

component PresetButton inherits Rectangle {
    in property <string> label;
    in property <color> accent;
    in property <bool> active;
    
    callback clicked;
    
    property <bool> hovered: touch.has-hover;
    property <bool> pressed: touch.pressed;
    
    height: 44px;
    horizontal-stretch: 1;
    border-radius: 10px;
    background: active ? accent : (hovered ? Theme.bg-hover : transparent);
    border-width: active ? 0px : 1px;
    border-color: hovered ? accent.with-alpha(0.5) : Theme.border;
    
    animate background { duration: 150ms; easing: ease-out; }
    animate border-color { duration: 150ms; }
    
    touch := TouchArea {
        mouse-cursor: pointer;
        clicked => { root.clicked(); }
    }
    
    Text {
        text: label;
        font-size: 12px;
        font-weight: 600;
        color: active ? Theme.text-primary : (hovered ? accent : Theme.text-muted);
        horizontal-alignment: center;
        vertical-alignment: center;
        
        animate color { duration: 150ms; }
    }
}

// ═══════════════════════════════════════════════════════════════════════════════
// MAIN APP
// ═══════════════════════════════════════════════════════════════════════════════

export component App inherits Window {
    title: "Temperature Converter";
    width: 420px;
    height: 720px;
    background: Theme.bg-base;

    callback celsius-changed(float);
    callback fahrenheit-changed(float);
    callback kelvin-changed(float);

    in-out property <float> celsius: 20;
    in-out property <float> fahrenheit: 68;
    in-out property <float> kelvin: 293.15;
    in-out property <float> temp-percent: 46.67;
    in-out property <string> temp-label: "Comfortable";

    // Background gradient
    Rectangle {
        width: 100%;
        height: 100%;
        
        // Warm orb top
        Rectangle {
            x: parent.width - 100px;
            y: -50px;
            width: 200px;
            height: 200px;
            border-radius: 100px;
            background: @radial-gradient(circle, #f59e0b15 0%, transparent 70%);
        }
        
        // Cool orb bottom
        Rectangle {
            x: -50px;
            y: parent.height - 150px;
            width: 180px;
            height: 180px;
            border-radius: 90px;
            background: @radial-gradient(circle, #3b82f610 0%, transparent 70%);
        }
    }

    VerticalLayout {
        padding: 28px;
        spacing: 20px;

        // Header
        HorizontalLayout {
            spacing: 14px;
            
            // Icon
            Rectangle {
                width: 48px;
                height: 48px;
                border-radius: 14px;
                background: @linear-gradient(135deg, Theme.hot 0%, Theme.warm 50%, Theme.cold 100%);
                
                Path {
                    width: 24px;
                    height: 24px;
                    x: (parent.width - self.width) / 2;
                    y: (parent.height - self.height) / 2;
                    viewbox-width: 24;
                    viewbox-height: 24;
                    fill: Theme.text-primary;
                    commands: "M12 2a2 2 0 0 0-2 2v10.5a4 4 0 1 0 4 0V4a2 2 0 0 0-2-2zm0 16a2 2 0 1 1 0-4 2 2 0 0 1 0 4z";
                }
            }
            
            VerticalLayout {
                alignment: center;
                spacing: 2px;
                
                Text {
                    text: "Temperature";
                    font-size: 24px;
                    font-weight: 700;
                    color: Theme.text-primary;
                }
                
                Text {
                    text: "Unit Converter";
                    font-size: 14px;
                    color: Theme.text-muted;
                }
            }
        }

        // Temperature gauge
        TempGauge {
            percent: temp-percent;
            label: temp-label;
        }
        
        // Quick presets
        Rectangle {
            height: 100px;
            background: Theme.bg-surface;
            border-radius: 16px;
            border-width: 1px;
            border-color: Theme.border;
            
            VerticalLayout {
                padding: 12px;
                padding-top: 10px;
                spacing: 8px;
                
                Text {
                    text: "Quick Presets";
                    font-size: 11px;
                    font-weight: 600;
                    color: Theme.text-muted;
                    letter-spacing: 0.5px;
                }
                
                HorizontalLayout {
                    spacing: 8px;
                    
                    PresetButton {
                        label: "Freezing";
                        accent: Theme.cold;
                        active: Math.round(celsius) == 0;
                        clicked => { celsius-changed(0); }
                    }
                    
                    PresetButton {
                        label: "Room";
                        accent: Theme.comfortable;
                        active: Math.round(celsius) == 20;
                        clicked => { celsius-changed(20); }
                    }
                    
                    PresetButton {
                        label: "Body";
                        accent: Theme.warm;
                        active: Math.round(celsius) == 37;
                        clicked => { celsius-changed(37); }
                    }
                    
                    PresetButton {
                        label: "Boiling";
                        accent: Theme.hot;
                        active: Math.round(celsius) == 100;
                        clicked => { celsius-changed(100); }
                    }
                }
            }
        }

        // Celsius slider
        TempSlider {
            height: 100px;
            label: "Celsius";
            unit: "°C";
            accent-color: Theme.cool;
            minimum: -50;
            maximum: 100;
            value <=> celsius;
            changed(val) => { celsius-changed(val); }
        }

        // Fahrenheit slider
        TempSlider {
            label: "Fahrenheit";
            unit: "°F";
            accent-color: Theme.warm;
            minimum: -58;
            maximum: 212;
            value <=> fahrenheit;
            changed(val) => { fahrenheit-changed(val); }
        }

        // Kelvin slider
        TempSlider {
            label: "Kelvin";
            unit: "K";
            accent-color: #a855f7;
            minimum: 223.15;
            maximum: 373.15;
            value <=> kelvin;
            changed(val) => { kelvin-changed(val); }
        }

        // Spacer
        Text {
            text: "Drag sliders or tap presets to convert";
            font-size: 12px;
            color: Theme.text-muted;
            height: 20px;
            horizontal-alignment: center;
        }
        Rectangle { vertical-stretch: 1;
 Rectangle { min-width: 16px; min-height: 16px; /* @lsp:ignore-node */ }        }

        // Footer hint
    }
}
