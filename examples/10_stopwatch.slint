// MAIN APP
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

export component App inherits Window {
    title: "Stopwatch";
    width: 380px;
    height: 600px;
    background: Theme.bg-base;

    callback start-stop();
    callback lap();
    callback reset();

    in-out property <string> display: "00:00.00";
    in-out property <bool> running: false;
    in-out property <[{num: int, time: string}]> laps: [];

    // Background gradient
    Rectangle {
        width: 100%;
        height: 100%;
        
        // Amber glow when running
        Rectangle {
            x: parent.width / 2 - 150px;
            y: -80px;
            width: 300px;
            height: 300px;
            border-radius: 150px;
            background: @radial-gradient(circle, #f59e0b15 0%, transparent 70%);
            opacity: running ? 1.0 : 0.3;
            
            animate opacity { duration: 300ms; }
        }
    }

    VerticalLayout {
        padding: 24px;
        spacing: 20px;

        // Header
        HorizontalLayout {
            alignment: center;
            spacing: 10px;
            
            Text {
                text: "â±ï¸";
                font-size: 16px;
                vertical-alignment: center;
            }
            
            Text {
                text: "STOPWATCH";
                font-size: 13px;
                font-weight: 700;
                color: Theme.text-muted;
                letter-spacing: 3px;
                vertical-alignment: center;
            }
        }

        // Timer display card
        Rectangle {
            height: 170px;
            background: Theme.bg-surface;
            border-radius: 24px;
            border-width: 1.5px;
            border-color: running ? Theme.accent.with-alpha(0.4) : Theme.border;
            
            drop-shadow-color: running ? Theme.accent-glow : transparent;
            drop-shadow-blur: running ? 30px : 0px;
            
            animate border-color { duration: 300ms; }
            animate drop-shadow-blur { duration: 300ms; }
            animate drop-shadow-color { duration: 300ms; }

            VerticalLayout {
                alignment: center;
                spacing: 14px;

                // Status indicator
                HorizontalLayout {
                    alignment: center;
                    spacing: 10px;

                    Rectangle {
                        width: 10px;
                        height: 10px;
                        border-radius: 5px;
                        background: running ? Theme.accent : Theme.text-muted;
                        
                        animate background { duration: 200ms; }
                    }

                    Text {
                        text: running ? "RUNNING" : "READY";
                        font-size: 11px;
                        font-weight: 700;
                        color: running ? Theme.accent : Theme.text-muted;
                        letter-spacing: 2px;

                        animate color { duration: 200ms; }
                    }
                }

                // Time display
                Text {
                    text: display;
                    font-size: 56px;
                    font-weight: 700;
                    font-family: "monospace";
                    color: running ? Theme.accent : Theme.text-primary;
                    horizontal-alignment: center;
                    letter-spacing: 2px;

                    animate color { duration: 200ms; }
                }
            }
        }

        // Control buttons
        HorizontalLayout {
            alignment: center;
            spacing: 16px;

            // Start/Stop button
            ControlButton {
                pill: true;
                icon: running ? "â¸" : "â–¶";
                label: running ? "Stop" : "Start";
                bg-color: running ? Theme.danger : Theme.success;
                bg-hover: running ? Theme.danger-dim : Theme.success-dim;
                bg-pressed: running ? #b91c1c : #15803d;
                
                clicked => { start-stop(); }
            }

            // Lap button
            ControlButton {
                pill: true;
                icon: "ğŸ";
                label: "Lap";
                bg-color: Theme.accent;
                bg-hover: Theme.accent-dim;
                bg-pressed: #b45309;
                disabled: !running;
                
                clicked => { lap(); }
            }

            // Reset button
            ControlButton {
                icon: "â†º";
                bg-color: Theme.bg-elevated;
                bg-hover: Theme.bg-hover;
                bg-pressed: Theme.bg-surface;
                
                clicked => { reset(); }
            }
        }

        // Laps section
        Rectangle {
            vertical-stretch: 1;
            background: Theme.bg-surface;
            border-radius: 20px;
            border-width: 1px;
            border-color: Theme.border;

            VerticalLayout {
                padding: 16px;
                padding-top: 14px;
                spacing: 12px;

                // Laps header
                HorizontalLayout {
                    padding-left: 4px;
                    padding-right: 4px;

                    Text {
                        text: "LAPS";
                        font-size: 11px;
                        font-weight: 700;
                        color: Theme.text-muted;
                        letter-spacing: 1.5px;
                    }

                    Rectangle { horizontal-stretch: 1; }

                    // Lap count badge
                    Rectangle {
                        width: 32px;
                        height: 22px;
                        border-radius: 11px;
                        background: laps.length > 0 ? Theme.accent.with-alpha(0.2) : Theme.bg-elevated;
                        border-width: 1px;
                        border-color: laps.length > 0 ? Theme.accent.with-alpha(0.3) : Theme.border;

                        Text {
                            text: laps.length;
                            font-size: 11px;
                            font-weight: 700;
                            color: laps.length > 0 ? Theme.accent : Theme.text-muted;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }

                // Empty state
                if laps.length == 0: Rectangle {
                    vertical-stretch: 1;

                    VerticalLayout {
                        alignment: center;
                        spacing: 10px;

                        Text {
                            text: "ğŸƒ";
                            font-size: 36px;
                            horizontal-alignment: center;
                        }

                        Text {
                            text: "No laps recorded";
                            font-size: 14px;
                            color: Theme.text-muted;
                            horizontal-alignment: center;
                        }
                        
                        Text {
                            text: "Start the timer and tap Lap";
                            font-size: 12px;
                            color: Theme.text-muted;
                            horizontal-alignment: center;
                            opacity: 0.7;
                        }
                    }
                }

                // Laps list
                ListView {
                    for item[idx] in laps: LapItem {
                        num: item.num;
                        time: item.time;
                        is-latest: idx == 0;
                    }
                }
            }
        }
    }
}
