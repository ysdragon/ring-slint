// CONTROL BUTTON
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

component ControlButton inherits Rectangle {
    in property <string> icon;
    in property <string> label;
    in property <color> bg-color;
    in property <color> bg-hover;
    in property <color> bg-pressed;
    in property <bool> disabled: false;
    in property <bool> pill: false;
    
    callback clicked;
    
    property <bool> hovered: touch.has-hover && !disabled;
    property <bool> pressed: touch.pressed && !disabled;
    
    width: pill ? 120px : 56px;
    height: 56px;
    border-radius: pill ? 28px : 16px;
    background: disabled ? Theme.bg-elevated : (pressed ? bg-pressed : (hovered ? bg-hover : bg-color));
    
    drop-shadow-color: disabled ? transparent : bg-color.with-alpha(0.4);
    drop-shadow-blur: hovered && !disabled ? 16px : 0px;
    drop-shadow-offset-y: hovered && !disabled ? 3px : 0px;
    
    animate background { duration: 150ms; easing: ease-out; }
    animate drop-shadow-blur { duration: 200ms; }
    
    touch := TouchArea {
        mouse-cursor: disabled ? default : pointer;
        enabled: !disabled;
        clicked => { root.clicked(); }
    }
    
    HorizontalLayout {
        alignment: center;
        spacing: 8px;
        
        Text {
            text: icon;
            font-size: pill ? 18px : 22px;
            color: disabled ? Theme.text-muted : Theme.text-primary;
            vertical-alignment: center;
        }
        
        if pill: Text {
            text: label;
            font-size: 15px;
            font-weight: 600;
            color: disabled ? Theme.text-muted : Theme.text-primary;
            vertical-alignment: center;
        }
    }
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// LAP ITEM
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

component LapItem inherits Rectangle {
    in property <int> num;
    in property <string> time;
    in property <bool> is-latest: false;
    
    property <bool> hovered: touch.has-hover;
    
    height: 56px;
    background: hovered ? Theme.bg-hover : transparent;
    border-radius: 12px;
    
    animate background { duration: 150ms; }
    
    touch := TouchArea {}
    
    HorizontalLayout {
        padding-left: 14px;
        padding-right: 14px;
        spacing: 12px;
        
        // Lap badge
        Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: is-latest ? Theme.accent.with-alpha(0.2) : Theme.bg-elevated;
            border-width: 1px;
            border-color: is-latest ? Theme.accent.with-alpha(0.4) : Theme.border;
            
            Text {
                text: "#" + num;
                font-size: 12px;
                font-weight: 700;
                color: is-latest ? Theme.accent : Theme.text-muted;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }
        
        Rectangle { horizontal-stretch: 1; }
        
        // Time
        Text {
            text: time;
            font-size: 20px;
            font-weight: 600;
            font-family: "monospace";
            color: is-latest ? Theme.accent : Theme.text-primary;
            vertical-alignment: center;
        }
    }
    
    // Bottom separator
    Rectangle {
        y: parent.height - 1px;
        x: 14px;
        width: parent.width - 28px;
        height: 1px;
        background: Theme.border-subtle;
    }
}

