import { ListView } from "std-widgets.slint";

global Theme {
    // Background layers
    out property <color> bg-base: #07070a;
    out property <color> bg-surface: #0f1014;
    out property <color> bg-elevated: #161820;
    out property <color> bg-hover: #1e2128;
    
    // Accent - Amber/Orange
    out property <color> accent: #f59e0b;
    out property <color> accent-light: #fbbf24;
    out property <color> accent-dim: #d97706;
    out property <color> accent-glow: #f59e0b40;
    
    // Text hierarchy
    out property <color> text-primary: #f8fafc;
    out property <color> text-secondary: #94a3b8;
    out property <color> text-muted: #64748b;
    
    // Semantic
    out property <color> success: #22c55e;
    out property <color> success-dim: #16a34a;
    out property <color> danger: #ef4444;
    out property <color> danger-dim: #dc2626;
    
    // Borders
    out property <color> border: #ffffff12;
    out property <color> border-subtle: #ffffff08;
}

enum StopwatchIcon {
    none,
    play,
    pause,
    flag,
    reset,
}

global IconPaths {
    out property <string> play: "M8 5v14l11-7L8 5z";
    out property <string> pause: "M6 19h4V5H6v14zm8-14v14h4V5h-4z";
    out property <string> flag: "M14.4 6L14 4H5v17h2v-7h5.6l.4 2h7V6h-5.6z";
    out property <string> reset: "M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z";
}

component StopwatchIconView inherits Rectangle {
    in property <StopwatchIcon> icon-type: StopwatchIcon.none;
    in property <color> icon-color: Theme.text-primary;
    in property <length> icon-size: 18px;
    
    width: icon-size;
    height: icon-size;
    
    Path {
        width: 100%;
        height: 100%;
        viewbox-width: 24;
        viewbox-height: 24;
        fill: icon-color;
        commands: icon-type == StopwatchIcon.play ? IconPaths.play
                : icon-type == StopwatchIcon.pause ? IconPaths.pause
                : icon-type == StopwatchIcon.flag ? IconPaths.flag
                : icon-type == StopwatchIcon.reset ? IconPaths.reset
                : "";
    }
}

component ControlButton inherits Rectangle {
    in property <StopwatchIcon> icon: StopwatchIcon.none;
    in property <string> label;
    in property <color> bg-color;
    in property <color> bg-hover;
    in property <color> bg-pressed;
    in property <bool> disabled: false;
    in property <bool> pill: false;
    
    callback clicked;
    
    property <bool> hovered: touch.has-hover && !disabled;
    property <bool> pressed: touch.pressed && !disabled;
    
    width: pill ? 120px : 56px;
    height: 56px;
    border-radius: pill ? 28px : 16px;
    background: disabled ? Theme.bg-elevated : (pressed ? bg-pressed : (hovered ? bg-hover : bg-color));
    
    drop-shadow-color: disabled ? transparent : bg-color.with-alpha(0.4);
    drop-shadow-blur: hovered && !disabled ? 16px : 0px;
    drop-shadow-offset-y: hovered && !disabled ? 3px : 0px;
    
    animate background { duration: 150ms; easing: ease-out; }
    animate drop-shadow-blur { duration: 200ms; }
    
    touch := TouchArea {
        mouse-cursor: disabled ? default : pointer;
        enabled: !disabled;
        clicked => { root.clicked(); }
    }
    
    HorizontalLayout {
        alignment: center;
        spacing: 8px;
        
        VerticalLayout {
            alignment: center;
            StopwatchIconView {
                icon-type: icon;
                icon-color: disabled ? Theme.text-muted : Theme.text-primary;
                icon-size: pill ? 18px : 22px;
            }
        }
        
        if pill: Text {
            text: label;
            font-size: 15px;
            font-weight: 600;
            color: disabled ? Theme.text-muted : Theme.text-primary;
            vertical-alignment: center;
        }
    }
}

// ═══════════════════════════════════════════════════════════════════════════════
// LAP ITEM
// ═══════════════════════════════════════════════════════════════════════════════

component LapItem inherits Rectangle {
    in property <int> num;
    in property <string> time;
    in property <bool> is-latest: false;
    
    property <bool> hovered: touch.has-hover;
    
    height: 56px;
    background: hovered ? Theme.bg-hover : transparent;
    border-radius: 12px;
    
    animate background { duration: 150ms; }
    
    touch := TouchArea {}
    
    HorizontalLayout {
        padding-left: 14px;
        padding-right: 14px;
        spacing: 12px;
        
        // Lap badge
        Rectangle {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: is-latest ? Theme.accent.with-alpha(0.2) : Theme.bg-elevated;
            border-width: 1px;
            border-color: is-latest ? Theme.accent.with-alpha(0.4) : Theme.border;
            
            Text {
                text: "#" + num;
                font-size: 12px;
                font-weight: 700;
                color: is-latest ? Theme.accent : Theme.text-muted;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }
        
        Rectangle { horizontal-stretch: 1; }
        
        // Time
        Text {
            text: time;
            font-size: 20px;
            font-weight: 600;
            font-family: "monospace";
            color: is-latest ? Theme.accent : Theme.text-primary;
            vertical-alignment: center;
        }
    }
    
    // Bottom separator
    Rectangle {
        y: parent.height - 1px;
        x: 14px;
        width: parent.width - 28px;
        height: 1px;
        background: Theme.border-subtle;
    }
}

// ═══════════════════════════════════════════════════════════════════════════════
// MAIN APP
// ═══════════════════════════════════════════════════════════════════════════════

export component App inherits Window {
    title: "Stopwatch";
    width: 380px;
    height: 600px;
    background: Theme.bg-base;

    callback start-stop();
    callback lap();
    callback reset();

    in-out property <string> display: "00:00.00";
    in-out property <bool> running: false;
    in-out property <[{num: int, time: string}]> laps: [];

    // Background gradient
    Rectangle {
        width: 100%;
        height: 100%;
        
        // Amber glow when running
        Rectangle {
            x: parent.width / 2 - 150px;
            y: -80px;
            width: 300px;
            height: 300px;
            border-radius: 150px;
            background: @radial-gradient(circle, #f59e0b15 0%, transparent 70%);
            opacity: running ? 1.0 : 0.3;
            
            animate opacity { duration: 300ms; }
        }
    }

    VerticalLayout {
        padding: 24px;
        spacing: 20px;

        // Header
        HorizontalLayout {
            alignment: center;
            spacing: 10px;
            
            Path {
                width: 16px;
                height: 16px;
                viewbox-width: 24;
                viewbox-height: 24;
                fill: Theme.text-muted;
                commands: "M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.4 0-8-3.6-8-8s3.6-8 8-8 8 3.6 8 8-3.6 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z";
            }
            
            Text {
                text: "STOPWATCH";
                font-size: 13px;
                font-weight: 700;
                color: Theme.text-muted;
                letter-spacing: 3px;
                vertical-alignment: center;
            }
        }

        // Timer display card
        Rectangle {
            height: 170px;
            background: Theme.bg-surface;
            border-radius: 24px;
            border-width: 1.5px;
            border-color: running ? Theme.accent.with-alpha(0.4) : Theme.border;
            
            drop-shadow-color: running ? Theme.accent-glow : transparent;
            drop-shadow-blur: running ? 30px : 0px;
            
            animate border-color { duration: 300ms; }
            animate drop-shadow-blur { duration: 300ms; }
            animate drop-shadow-color { duration: 300ms; }

            VerticalLayout {
                alignment: center;
                spacing: 14px;

                // Status indicator
                HorizontalLayout {
                    alignment: center;
                    spacing: 10px;

                    Rectangle {
                        width: 10px;
                        height: 10px;
                        border-radius: 5px;
                        background: running ? Theme.accent : Theme.text-muted;
                        
                        animate background { duration: 200ms; }
                    }

                    Text {
                        text: running ? "RUNNING" : "READY";
                        font-size: 11px;
                        font-weight: 700;
                        color: running ? Theme.accent : Theme.text-muted;
                        letter-spacing: 2px;

                        animate color { duration: 200ms; }
                    }
                }

                // Time display
                Text {
                    text: display;
                    font-size: 56px;
                    font-weight: 700;
                    font-family: "monospace";
                    color: running ? Theme.accent : Theme.text-primary;
                    horizontal-alignment: center;
                    letter-spacing: 2px;

                    animate color { duration: 200ms; }
                }
            }
        }

        // Control buttons
        HorizontalLayout {
            alignment: center;
            spacing: 16px;

            // Start/Stop button
            ControlButton {
                pill: true;
                icon: running ? StopwatchIcon.pause : StopwatchIcon.play;
                label: running ? "Stop" : "Start";
                bg-color: running ? Theme.danger : Theme.success;
                bg-hover: running ? Theme.danger-dim : Theme.success-dim;
                bg-pressed: running ? #b91c1c : #15803d;
                
                clicked => { start-stop(); }
            }

            // Lap button
            ControlButton {
                pill: true;
                icon: StopwatchIcon.flag;
                label: "Lap";
                bg-color: Theme.accent;
                bg-hover: Theme.accent-dim;
                bg-pressed: #b45309;
                disabled: !running;
                
                clicked => { lap(); }
            }

            // Reset button
            ControlButton {
                icon: StopwatchIcon.reset;
                bg-color: Theme.bg-elevated;
                bg-hover: Theme.bg-hover;
                bg-pressed: Theme.bg-surface;
                
                clicked => { reset(); }
            }
        }

        // Laps section
        Rectangle {
            vertical-stretch: 1;
            background: Theme.bg-surface;
            border-radius: 20px;
            border-width: 1px;
            border-color: Theme.border;

            VerticalLayout {
                padding: 16px;
                padding-top: 14px;
                spacing: 12px;

                // Laps header
                HorizontalLayout {
                    padding-left: 4px;
                    padding-right: 4px;

                    Text {
                        text: "LAPS";
                        font-size: 11px;
                        font-weight: 700;
                        color: Theme.text-muted;
                        letter-spacing: 1.5px;
                    }

                    Rectangle { horizontal-stretch: 1; }

                    // Lap count badge
                    Rectangle {
                        width: 32px;
                        height: 22px;
                        border-radius: 11px;
                        background: laps.length > 0 ? Theme.accent.with-alpha(0.2) : Theme.bg-elevated;
                        border-width: 1px;
                        border-color: laps.length > 0 ? Theme.accent.with-alpha(0.3) : Theme.border;

                        Text {
                            text: laps.length;
                            font-size: 11px;
                            font-weight: 700;
                            color: laps.length > 0 ? Theme.accent : Theme.text-muted;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }

                // Empty state
                if laps.length == 0: Rectangle {
                    vertical-stretch: 1;

                    VerticalLayout {
                        alignment: center;
                        spacing: 10px;

                        Path {
                            width: 36px;
                            height: 36px;
                            viewbox-width: 24;
                            viewbox-height: 24;
                            fill: Theme.text-muted;
                            commands: "M13.5 5.5c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zM9.8 8.9L7 23h2.1l1.8-8 2.1 2v6h2v-7.5l-2.1-2 .6-3C14.8 12 16.8 13 19 13v-2c-1.9 0-3.5-1-4.3-2.4l-1-1.6c-.4-.6-1-1-1.7-1-.3 0-.5.1-.8.1L6 8.3V13h2V9.6l1.8-.7";
                        }

                        Text {
                            text: "No laps recorded";
                            font-size: 14px;
                            color: Theme.text-muted;
                            horizontal-alignment: center;
                        }
                        
                        Text {
                            text: "Start the timer and tap Lap";
                            font-size: 12px;
                            color: Theme.text-muted;
                            horizontal-alignment: center;
                            opacity: 0.7;
                        }
                    }
                }

                // Laps list
                ListView {
                    for item[idx] in laps: LapItem {
                        num: item.num;
                        time: item.time;
                        is-latest: idx == 0;
                    }
                }
            }
        }
    }
}
